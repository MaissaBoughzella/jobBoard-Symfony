
<!-- code html de la page dashbord de l'admin -->
{% extends 'adminBase.html.twig' %}
{% block body %}
  
     <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{path('admin')}}">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
<!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">
          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
              <span class="info-box-icon bg-info elevation-1"><i class="fas fa-building"></i></span>

              <div class="info-box-content" style="font-size: 18px;">
                <span class="info-box-text"><span class="info-box-number">{{c}}</span>Companies</span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
              <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-cogs"></i></span>

              <div class="info-box-content" style="font-size: 18px;">
                <span class="info-box-number">{{j | length}}</span>
                <span class="info-box-text">Jobs</span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->

          <!-- fix for small devices only -->
          <div class="clearfix hidden-md-up"></div>

          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
              <span class="info-box-icon bg-success elevation-1"><i class="fas fa-users-cog"></i></span>
              <div class="info-box-content" style="font-size: 18px;">
                <span class="info-box-number">{{ e }}</span>
                <span class="info-box-text">Members</span>
 
              </div>              

              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
              <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-users"></i></span>

              <div class="info-box-content" style="font-size: 18px;">
                <span class="info-box-number">{{s | length}}</span>
                <span class="info-box-text">Subscribers</span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->

        </div>
               
              

      
 

        <!-- Main row -->
        <div class="row">
          <!-- Left col -->
          <div class="col-md-12">
           
            <!-- /.card -->
            <div class="row">        
              <div class="col-md-6">
                <!-- USERS LIST -->
                <div class="card" >
                  <div class="card-header">
                    <h3 class="card-title">Latest Companies</h3>

                    <div class="card-tools">
                      <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
                      </button>
                    </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <ul class="users-list clearfix">
                    {%for c in comp%}
                      {% for role in c.roles%}
							        {% if role=='ROLE_COMPANY'%}
                      <li>
                        <img src="{{asset(c.image)}}" alt="User Image">
                        <a class="users-list-name" href="#">{{c.username}}</a>
                        <span class="users-list-date">{{c.category.name}}</span>
                      </li>
                      {%endif%}
                      {%endfor%}
                      {%endfor%}
                    </ul>
                    <!-- /.users-list -->
                  </div>
                  <!-- /.card-body -->
                  <div class="card-footer text-center">
                    <a href="{{path('companiesAdmin')}}">View All Companies</a>
                  </div>
                  <!-- /.card-footer -->
                </div>
                <!--/.card -->
              </div>
              <!-- /.col -->

              <div class="col-md-6">
                <!-- USERS LIST -->
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Latest Members</h3>

                    <div class="card-tools">
                      <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
                      </button>
                    </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <ul class="users-list clearfix">
                    {%for e in emp%}
                      {% for role in e.roles%}
							        {% if role=='ROLE_EMPLOYEE'%}
                      <li>
                        <img src="{{asset('uploads/photos/'~ e.image) }}" alt="User Image">
                        <a class="users-list-name" href="{{path('ProfileDetailsAdmin',{ 'id': e.id})}}">{{e.username}}</a>
                        <span class="users-list-date">{{e.createdAt|ago}}</span>
                      </li>
                      {%endif%}
                    {%endfor%}
                    {%endfor%}
                    </ul>
                    <!-- /.users-list -->
                  </div>
                  <!-- /.card-body -->
                  <div class="card-footer text-center">
                    <a href="{{path('membersAdmin')}}">View All Members</a>
                  </div>
                  <!-- /.card-footer -->
                </div>
                <!--/.card -->
              </div>
              <!-- /.col -->
              
            </div>
            <!-- /.row -->
          

             <!-- JOB LIST -->
          <div class="row">
            <div class="col-md-6">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Recently Added Jobs</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <ul class="products-list product-list-in-card pl-2 pr-2">
                {%for j in job%}
                  <li class="item">
                    <div class="product-img">
                      <img src="{{asset('images/logo/icon1.png')}}" alt="Product Image" class="img-size-50">
                    </div>
                    <div class="product-info">
                      <a href="{{path('jobDetailsAdmin',{ 'id': j.id})}}" class="product-title">{{j.name}}
                        <span class="badge badge-warning float-right">{{j.wage}}</span></a>
                      <span class="product-description">
                        {{j.createdAt|ago}}
                      </span>
                    </div>
                  </li>
                  {% endfor %}
                </ul>
              </div>
              <!-- /.card-body -->
              <div class="card-footer text-center">
                <a href="{{path('jobsAdmin')}}" class="uppercase">View All Jobs</a>
              </div>
              <!-- /.card-footer -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
              <!-- TABLE: LATEST SUBSCRIBERS -->
            <div class="col-md-6">
            <div class="card">
              <div class="card-header border-transparent">
                <h3 class="card-title">Latest Subscribers</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table m-0">
                    <thead>
                    <tr>
                      <th>ID</th>
                      <th>E-mail</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%for n in new%}
                    <tr>
                      <td>{{n.id}}</td>
                      <td>{{n.email}}</td>
                    </tr>
                    {%endfor%}
                    </tbody>
                  </table>
                </div>
                <!-- /.table-responsive -->
              </div>
              <!-- /.card-body -->
              <div class="card-footer clearfix">
                <a href="{{path('subscribersAdmin')}}" class="btn btn-sm btn-secondary float-right">View All Subscribers</a>
              </div>
              <!-- /.card-footer -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
          </div>
          </div>
      </div><!--/. container-fluid -->
    </section>
    
    <!-- /.content -->
{% endblock %}