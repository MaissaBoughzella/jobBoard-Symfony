
{% extends 'adminBase.html.twig' %}

{% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-4">
            <h1 class="m-0 text-dark">Members</h1>
          </div><!-- /.col -->
          <div class="col-sm-8">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item active"><a href="{{path('admin')}}">Home</a></li>
              <li class="breadcrumb-item">Members</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
<!-- Main content -->
    <section class="content">

      <!-- Default box -->
      
      <div class="card card-solid">
        <div class="card-body pb-0">
          <div class="row d-flex align-items-stretch">
            {% for employee in employee%}
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch" >
              <div class="card bg-light">
                <div class="card-header text-muted border-bottom-0">
                  {{employee.prof}}
                </div>
                <div class="card-body pt-0">
                  <div class="row">
                    <div class="col-7">
                      <h2 class="lead"><b>{{employee.name}}</b></h2>
                       <p class="text-muted text-sm"><b>Skills: </b> {{employee.comp1}} / {{employee.comp2}} / {{employee.comp3}} / {{employee.comp4}}</p>
                    
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span>{{employee.address}}</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span>{{employee.email}}</li>
                      </ul>
                    </div>

                    
                    <div class="col-5 text-center">
                      <img src="{{asset(employee.image)}}" alt="" class="img-circle img-fluid">
                    </div>
                  </div>
                </div>

                <div class="card-footer">
                  <div class="text-right">
                    <a href="{{path('ProfileDetailsAdmin',{ 'id': employee.id})}}" class="btn btn-sm btn-primary">
                      <i class="fas fa-user"></i> View Profile
                    </a>
                  </div>
                </div>
            
              </div>
            </div> {% endfor%}
        </div>
        <!-- /.card-body -->
        <div class="navigation" style="padding-left: 40%;">
            {{ knp_pagination_render(employee) }}
        </div>
        <!-- /.card-footer -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  {% endblock %}