

{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<!-- code html de la page accueil  -->
    <!-- Content -->
    <div class="page-content">
		<!-- Section Banner -->
		<div class="dez-bnr-inr dez-bnr-inr-md overlay-black-dark" style="background-image:url(images/main-slider/slide1.jpg);">
            <div class="container">
                <div class="dez-bnr-inr-entry align-m text-white">
					<div class=" job-search-form">
						<h2 class="text-center">The Easiest Way to Get Your New Job</h2>
						<h3>Find Jobs, Employment & Career Opportunities</h3>
						{{form_start(formS)}}
							<div class="input-group">
								{{form_row(formS.q)}}
								{{form_row(formS.l)}}
								<div class="input-group-prepend">
									<button class="site-button" style="width:210px;">Search</button>
								</div>
							</div>
						{{form_end(formS)}}
					</div>
				</div>
            </div>
        </div>
		<!-- Section Banner END -->
		<!-- Our Job -->
		<div class="section-full bg-white content-inner-2">
			<div class="container">
				<div class="d-flex job-title-bx section-head">
					<div class="mr-auto">
						<h2 class="m-b5">Recent Jobs</h2>
					</div>
					<div class="align-self-end">
						<a href="{{ path('job') }}" class="site-button button-sm">Browse All Jobs <i class="fa fa-long-arrow-right"></i></a>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-9">
						<ul class="post-job-bx">
						{%for job in jobs%}
							<li>
								<a href="{{path('JobDetail',{ 'id': job.id})}}">
									<div class="d-flex m-b30">
										<div class="job-post-company">
											<span><img src="images/logo/icon1.png"/></span>
										</div>
										<div class="job-post-info">
											<h4>{{job.name}}</h4>
											<ul>
												<li><i class="fa fa-map-marker"></i> {{job.location}}</li>
												<li><i class="fa fa-bookmark-o"></i> {{job.type.name}}</li>
												<li><i class="fa fa-clock-o"></i> Published {{ job.createdAt.modify('-1 hours')|ago}}</li>
											</ul>
										</div>
									</div>
									<div class="d-flex">
										<div class="job-time mr-auto">
											<span>{{ job.type.name }}</span>
										</div>
										<div class="salary-bx">
											<span>{{ job.wage }}</span>
										</div>
									</div>
								</a>
							</li>
						{%endfor%}
						</ul>
						<div class="pagination-bx m-t40">
							{{ knp_pagination_render(jobs) }}	
						</div>
					</div>
					<div class="col-lg-3">
						<div class="sticky-top">
							<div class="quote-bx">
									<div class="quote-info">
										<h4>Make a Difference with Your Online Resume!</h4>
										<p>Your resume in minutes with JobBoard resume assistant is ready!</p>
										<a href="{{ path('register') }}" class="site-button text-center" style="margin-left:25px">Create an Account</a>
									</div>
								</div>
								<br>
							<div class="candidates-are-sys m-b30">
								<div class="candidates-bx">
									<div class="testimonial-pic radius"><img src="images/testimonials/pic3.jpg" alt="" width="100" height="100"></div>
									<div class="testimonial-text">
										<p>I just got a job that I applied for via careerfy! I used the site all the time during my job hunt.</p>
									</div>
									<div class="testimonial-detail"> <strong class="testimonial-name">Richard Anderson</strong> <span class="testimonial-position">Nevada, USA</span> </div>
								</div>
							</div>
							
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Our Job END -->
		
		<!-- Call To Action -->
			<div class="section-full content-inner-2 call-to-action overlay-black-dark text-white text-center bg-img-fix" style="background-image: url(images/background/bg4.jpg);">
				<div class="container">
					<div class="row">
						<div class="col-lg-12">
							<h2 class="m-b10">Make a Difference with Your Online Resume!</h2>
							<p class="m-b0">If you don't have an account with us, please create one.</p>
							<a href="{{ path('register') }}" class="site-button m-t20 outline outline-2 radius-xl">Create an Account</a>
						</div>
					</div>
				</div>
			</div>
		<!-- Call To Action END -->
			
		
		<!-- Our Latest Blog -->
			<div class="section-full content-inner-2 overlay-white-middle">
				<div class="container">
					<div class="section-head text-black text-center">
						<h2 class="text-uppercase m-b0">companies</h2>
						<p>JobBoard.com offers companies and recruiters high-level services allowing them to better manage the recruitment process and to succeed in their HR strategies.</p>
					</div>
					<div class="blog-carousel owl-carousel owl-btn-center-lr owl-btn-3 owl-theme owl-btn-center-lr owl-btn-1">
					{% for company in companies %}
						<div class="item">
							<div class="blog-post blog-grid blog-style-1">
								<div class="dez-post-media dez-img-effect radius-sm"> <a href="#"><img src="{{asset(company.image)}}" alt="" style="height: 300px"></a> </div>
								<div class="dez-info">
									 <div class="dez-post-meta">
										<ul class="d-flex align-items-center">
											<li class="post-date"><i class="fa fa-map-marker"></i>{{company.location}}</li>
										</ul>
									</div>
									<div class="dez-post-title ">
										<h5 class="post-title font-20"><a href="#">{{company.username}}</a></h5>
									</div>
									<div class="dez-post-text">
										<p>{{company.description}}</p>
									</div>
									
								</div>
							</div>
						</div>
						
				{%endfor%}		
					</div>
				</div>
			
			</div>
				<div class="dez-post-readmore blog-share text-center" > 
					<a  style="width:300px" href="{{ path('companies') }}" title="READ MORE" rel="bookmark" class="site-button outline">MORE COMPANIES</a>
				</div>
			<!-- Our Latest Blog -->	
			</div>
{% endblock %}
